#:kivy 1.11.1

<BoardGame>:
    bcolor: 0,0,255,.8
    canvas.before:
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.pos
            size: self.size


<RootWidget>
    AnchorLayout:
        AsyncImage:
            source: "farm.jpg"
            anchor_x = left
            anchor_y = center
        AsyncImage:
            source: "farm.jpg"
            anchor_x = right
            anchor_y = center
        AsyncImage:
            source: "farm.jpg"
            size_hint: .4,.4
            pos: 150,150